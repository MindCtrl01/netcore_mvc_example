@model ProjectMVC.ViewModels.OrderCreateSelectionViewModel

@{
    ViewData["Title"] = "Create";
}
<h2>Create new order</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Order" asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Product</label>
                <select class="form-control" name="ProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Customer</label>
                <select class="form-control" name="CustomerId" asp-items="@(new SelectList(Model.Customers, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Order Date</label>
                <input id="datepicker" name="OrderDate" type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Amount</label>
                <input type="number" name="Amount" class="form-control" value="" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input onclick="console.log(document.getElementById('datepicker').value)" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
</div>
</div>

<div>
    <a asp-action="List" asp-controller="Order">Back to List</a>
</div>

@section Scripts
{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}
