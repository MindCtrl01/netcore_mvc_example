@model ProjectMVC.ViewModels.ListOrderViewModel

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().Amount)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListOrder)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
            </tr>
        }
    </tbody>
</table>
<paging total-records="Model.TotalRecord"
        page-no="@ViewBag.PageNo"
        page-size="@ViewBag.PageSize"
        show-total-pages="false"
        show-total-records="false"
        query-string-key-page-no="pageNo"
        query-string-key-page-size="pageSize">
</paging>
