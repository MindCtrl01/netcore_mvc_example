@model ProjectMVC.ViewModels.ListOrderViewModel

@{
    ViewData["Title"] = "List";
}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<h1>List Order</h1>

<p>
    <a asp-controller="Order" asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("List", "Order"))
{
    <p>Enter category to search: @Html.TextBox("search") <input type="submit" value="Search" /></p>
}

<table id="orderDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOrder.FirstOrDefault().Amount)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListOrder)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
            </tr>
        }
    </tbody>
</table>
<paging total-records="Model.TotalRecord"
        page-no="@ViewBag.PageNo"
        page-size="@ViewBag.PageSize"
        show-total-pages="false"
        show-total-records="false"
        query-string-key-page-no="pageNo"
        query-string-key-page-size="pageSize">
</paging>
@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/OrderDatatable.js"></script>
}
